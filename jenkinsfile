pipeline {
    agent any 
    stages {
        stage('gitclone') { 
            steps {
                git branch: 'main', credentialsId: 'private_key', url: 'https://github.com/awscloud1/spring-petclinic.git'
                 //sh "./mvnw package"
            }
        }
        stage('maven pakage build') { 
            steps {
                 sh "./mvnw package"
                 sh ' java -jar target/*.jar --server.port=8090 '
                 deploy adapters: [tomcat9(credentialsId: 'tomcat-id', path: '', url: 'http://172.31.84.51:8090')], contextPath: 'spring-petclinc', war: '**/*.war'
            }
        }
        stage('Build') { 
            steps {
                sh ' docker build -t awscloud1/spring-petclinic . '
            }
        }
    }
}
