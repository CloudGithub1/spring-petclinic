pipeline {
    agent any 
    stages {
        stage('Git Clone') { 
            steps {
                git branch: 'main', credentialsId: 'private_key', url: 'https://github.com/awscloud1/spring-petclinic.git' 
            }
        }
        stage('maven package build') { 
            steps {
                sh "./mvnw package" 
                java -jar target/*.jar
            }
        }
        stage('Deploy') { 
            steps {
                deploy adapters: [tomcat9(credentialsId: 'tomcat-id', path: '', url: 'http://172.31.84.51:8080')], contextPath: 'petclinc', war: '**/*.jar' 
            }
        }
    }
}
